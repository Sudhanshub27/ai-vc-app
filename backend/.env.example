PORT=5000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/vc-app

# JWT
JWT_ACCESS_SECRET=generate_with_node_crypto_randomBytes_64_hex
JWT_REFRESH_SECRET=generate_different_secret_same_method
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# Google OAuth
# 1. Go to https://console.cloud.google.com
# 2. New Project → APIs & Services → OAuth 2.0 Client IDs
# 3. Application type: Web
# 4. Authorized redirect URI: http://localhost:5000/api/auth/google/callback
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
